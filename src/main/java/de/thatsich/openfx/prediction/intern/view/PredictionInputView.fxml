<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<FlowPane xmlns:fx="http://javafx.com/fxml/1" hgap="5.0" prefWidth="-1.0" xmlns="http://javafx.com/javafx/8"
          fx:controller="de.thatsich.openfx.prediction.intern.control.PredictionInputPresenter">

	<children>
		<Button fx:id="nodeButtonPredictBinaryClassification" onAction="#onPredictBinaryPredictionAction">
			<graphic>
				<ImageView>
					<image>
						<Image url="@add.png"/>
					</image>
				</ImageView>
			</graphic>
			<tooltip>
				<Tooltip text="Predicts an Input and adds the Prediction to the List."/>
			</tooltip>
		</Button>
		<Button fx:id="nodeButtonDeleteBinaryPrediction" onAction="#onDeleteBinaryPredictionAction">
			<graphic>
				<ImageView>
					<image>
						<Image url="@remove.png"/>
					</image>
				</ImageView>
			</graphic>
			<tooltip>
				<Tooltip text="Deletes a Prediction from the List."/>
			</tooltip>
		</Button>
		<Button fx:id="nodeButtonResetBinaryPrediction" onAction="#onResetBinaryPredictionAction">
			<graphic>
				<ImageView>
					<image>
						<Image url="@delete.png"/>
					</image>
				</ImageView>
			</graphic>
			<tooltip>
				<Tooltip text="Resets the whole Prediction List physically. CAUTION!"/>
			</tooltip>
		</Button>
	</children>
	<padding>
		<Insets bottom="10.0"/>
	</padding>

</FlowPane>
