<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<FlowPane hgap="5.0" prefWidth="-1.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.thatsich.bachelor.prediction.intern.control.PredictionInputPresenter">

	<children>
		<Button fx:id="nodeButtonPredictBinaryClassification" onAction="#onPredictBinaryPredictionAction">
			<graphic>
				<ImageView>
					<image>
						<Image url="@add.png" />
					</image>
				</ImageView>
			</graphic>
			<tooltip>
				<Tooltip text="Predicts an Input and adds the Prediction to the List." />
			</tooltip>
		</Button>
		<Button fx:id="nodeButtonDeleteBinaryPrediction" onAction="#onDeleteBinaryPredictionAction">
			<graphic>
				<ImageView>
					<image>
						<Image url="@remove.png" />
					</image>
				</ImageView>
			</graphic>
			<tooltip>
				<Tooltip text="Deletes a Prediction from the List." />
			</tooltip>
		</Button>
		<Button fx:id="nodeButtonResetBinaryPrediction" onAction="#onResetBinaryPredictionAction">
			<graphic>
				<ImageView>
					<image>
						<Image url="@delete.png" />
					</image>
				</ImageView>
			</graphic>
			<tooltip>
				<Tooltip text="Resets the whole Prediction List physically. CAUTION!" />
			</tooltip>
		</Button>
	</children>
	<padding>
		<Insets bottom="10.0" />
	</padding>

</FlowPane>
