<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<FlowPane hgap="5.0" prefWidth="-1.0" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="de.thatsich.bachelor.imageprocessing.restricted.controller.ImageInputPresenter">

	<children>
		<Button fx:id="nodeButtonAddImage" onAction="#onAddImageAction">
			<graphic>
				<ImageView>
					<image>
						<Image url="@add-icon.png" />
					</image>
				</ImageView>
			</graphic>
			<tooltip>
                <Tooltip text="Adds an Image to the List."/>
            </tooltip>
		</Button>

		<Button fx:id="nodeButtonRemoveImage" onAction="#onRemoveImageAction">
			<graphic>
				<ImageView>
					<image>
						<Image url="@remove-icon.png" />
					</image>
				</ImageView>
			</graphic>
			<tooltip>
                <Tooltip text="Removes an Image from the List."/>
            </tooltip>
		</Button>

		<Button fx:id="nodeButtonResetDatabase" onAction="#onResetDatabaseAction">
			<graphic>
				<ImageView>
					<image>
						<Image url="@reset-icon.png" />
					</image>
				</ImageView>
			</graphic>
			<tooltip>
                <Tooltip text="Resets the whole Image List physically. CAUTION!"/>
            </tooltip>
		</Button>

	</children>
	<padding>
		<Insets bottom="10.0" />
	</padding>

</FlowPane>
